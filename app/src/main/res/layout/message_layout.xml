<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:layout_margin="16dp"
    android:elevation="8dp">

    <TextView
        android:id="@+id/username_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:text="@string/user_name_text"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_textview" />

    <TextView
        android:id="@+id/title_textview"
        android:text="@string/message_title_text"
        android:textSize="@dimen/dimen_24sp"
        android:layout_width="0dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/username_textview"/>

    <TextView
        android:id="@+id/date_textview"
        android:text="@string/message_date_text"
        android:textSize="@dimen/dimen_24sp"
        android:layout_width="0dp"
        android:paddingStart="8dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/title_textview"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/content_textview"
        android:text="@string/message_content_text"
        android:textSize="@dimen/dimen_24sp"
        android:layout_width="0dp"
        android:paddingTop="4dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_textview"
        app:layout_constraintStart_toEndOf="@id/username_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>